import { Theme } from "../../theme.slint";
import { Store } from "../../store.slint";
import { IconBtn } from "../../base/icon-btn.slint";
import { Logic } from "../../logic.slint";

export component BItem inherits VerticalLayout{
    in-out property text <=> txt.text;

    padding-left: self.width * 30%;
    padding-right: Theme.padding * 2;
    spacing: Theme.spacing;

    HorizontalLayout {
        padding-bottom: Theme.padding;
        alignment: end;

        Rectangle {
            height: img.width + 10px;
            width: img.width + 10px;
            border-radius: self.height / 2;
            background: Theme.basic-black-color;
            img := Image {
                width: Theme.icon-size;
                height: Theme.icon-size;
                image-fit: ImageFit.contain;
                source: @image-url("../../images/bot.svg");
                colorize: Colors.steelblue;
            }
        }
    }

    HorizontalLayout {
        Rectangle {
            background: Theme.dark-fill-color;
            border-radius: Theme.border-radius;
            VerticalLayout{
                padding: Theme.padding * 2;
                txt := Text {
                    color: Theme.primary-text-color;
                    font-size: Theme.default-font-size + 2px;
                    wrap: word-wrap;
                }
            }

            TouchArea {
                clicked => {
                    Logic.copy_to_clipboard(root.text);
                }
            }
        }
    }
}

