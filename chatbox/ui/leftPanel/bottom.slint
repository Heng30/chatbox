import { Button, ListView,  TextEdit } from "std-widgets.slint";
import { Theme } from "../theme.slint";
import { Store } from "../store.slint";
import { Btn } from "../base/btn.slint";

export component Bottom inherits VerticalLayout {
    height: Theme.bottom-panel-height;
    padding-top: Theme.padding;

    property<length> btn-height: (self.height - Theme.spacing) / 3;

    Rectangle {
        height: 100%;

        VerticalLayout {
            spacing: Theme.spacing / 2;
            Btn {
                height: root.btn-height;
                icon: @image-url("../images/setting-fill.svg");
                text: Store.translator.setting;
                clicked => {
                    Store.setting-dialog-config.show = true;
                }
            }

            Btn {
                height: root.btn-height;
                icon: @image-url("../images/about.svg");
                text: Store.translator.about;
                clicked => {
                    Store.about-dialog.show = true;
                }
            }

            Btn {
                height: root.btn-height;
                icon: @image-url("../images/help.svg");
                text: Store.translator.help;
                clicked => {
                    Store.help-dialog.show = true;
                }
            }
        }
    }
}
