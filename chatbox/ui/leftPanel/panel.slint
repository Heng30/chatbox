import { Button, ListView,  TextEdit } from "std-widgets.slint";
import { Theme } from "../theme.slint";
import { Store } from "../store.slint";
import { Logic } from "../logic.slint";

export component LPanel inherits VerticalLayout {
    spacing: Theme.spacing;
    width: Theme.left-panel-width;

    VerticalLayout {
        height: Theme.header-height;
        Button {
            text: "新建会话 +";
            clicked => {
                Logic.handle-new-session("会话");
            }
        }
    }

    ListView {
        padding: Theme.padding;
        for data in Store.chat-sessions : VerticalLayout {
            padding: Theme.padding * 2;
            spacing: Theme.spacing * 2;
            Text {
                text: data.name;
            }
        }
    }

    VerticalLayout {
        height: Theme.button-panel-height;
        padding-top: Theme.padding;

        VerticalLayout {
            spacing: Theme.spacing;
            Rectangle {
                background: Colors.gray;
            }

        }
    }
}


